<div class="container">
  <div class="card">
    <div class="card-header">
    <h3>Edit Comment</h3>
    </div>
    <div class="card-body">
      <form class="editComment">
            <div class="form-group">
                <textarea class="form-control" id="typeComment" rows="1">{{comment.comment}}</textarea>
            </div>
            
            <button class="btn btn-outline-dark btn-dark btn-lg px-5" id="editComment" type="submit">Update</button>
            
            <button class="btn btn-outline-dark btn-dark btn-lg px-5" type="button" id="deleteComment">Delete</button>
       </form>
      </div>
    </div>
</div>

